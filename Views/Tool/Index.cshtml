
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ツール</h2>

<div class="container">
    <form asp-controller="Tool" asp-action="Convert" method="post">
        <div class="form-group">
            <label>変換テキスト</label>
            <textarea name="value" class="form-control">@ViewBag.value</textarea>
        </div>
        <div class="form-group">
            <label>変換方法</label>
            <select name="type" asp-items="@ViewBag.typeItems" class="form-control">
                <option value="urlencode">URLエンコード</option>
                <option value="urldecode">URLデコード</option>
                <option value="htmlencode">HTMLエンコード</option>
                <option value="htmldecode">HTMLデコード</option>
            </select>
        </div>
        <div class="form-group">
            <label>変換結果</label>
            <textarea name="result" class="form-control">@ViewBag.result</textarea>
        </div>
        <button>変換</button>
    </form>
</div>
